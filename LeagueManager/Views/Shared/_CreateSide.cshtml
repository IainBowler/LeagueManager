@model LeagueManager.Models.CreateEditSideViewModel


<div class="form-group">
    <h4>Side</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Side.Id)
    @Html.HiddenFor(model => model.Side.OwnerName)
    @Html.HiddenFor(model => model.IdOfLeagueToAddTo)

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name")
        </dt>
        <dd>
            @Html.EditorFor(model => model.Side.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Side.Name, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />

    @if (HttpContext.Current.User.IsInRole("Admin") == true)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Owner")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Side.OwnerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Side.OwnerName, "", new { @class = "text-danger" })
            </dd>
        </dl>
        <hr />
    }
</div>

