@model LeagueManager.Models.Side


<div class="form-group">

    <h4>Side</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.OwnerName)

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name")
        </dt>
        <dd>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Leagues Team is in")
        </dt>
        <dd>
            @foreach (LeagueManager.Models.League league in Model.LeaguesIn)
            {
                <p>
                    @Html.DisplayFor(modelItem => league.Name)
                </p>
            }
        </dd>
    </dl>
    <hr />
    @if (HttpContext.Current.User.IsInRole("Admin") == true)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Owner")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.OwnerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OwnerName, "", new { @class = "text-danger" })
            </dd>
        </dl>
        <hr />
    }
</div>
