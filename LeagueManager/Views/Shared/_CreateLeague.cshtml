@model LeagueManager.Models.CreateEditLeagueViewModel

<div class="form-group">
    <h4>League</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.League.Id)
    @Html.HiddenFor(model => model.League.OwnerName)


    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Name")
        </dt>
        <dd>
            @Html.EditorFor(model => model.League.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.League.Name, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Description")
        </dt>
        <dd>
            @Html.EditorFor(model => model.League.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.League.Description, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Teams in League")
        </dt>
        <dd>
            @Html.ListBoxFor(x => x.SelectedSides, Model.Sides)
            @Html.ValidationMessageFor(model => model.League.Members, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Points for a Win")
        </dt>
        <dd>
            @Html.EditorFor(model => model.League.PointsForAWin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.League.PointsForAWin, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Points for a Draw")
        </dt>
        <dd>
            @Html.EditorFor(model => model.League.PointsForADraw, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.League.PointsForADraw, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Points for a Loss")
        </dt>
        <dd>
            @Html.EditorFor(model => model.League.PointsForALoss, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.League.PointsForALoss, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Public")
        </dt>
        <dd>
            @Html.CheckBoxFor(model => model.League.Public)
            @Html.ValidationMessageFor(model => model.League.Public, "", new { @class = "text-danger" })
        </dd>
    </dl>
    <hr />
    @if (HttpContext.Current.User.IsInRole("Admin") == true)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Owner")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.League.OwnerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.League.OwnerName, "", new { @class = "text-danger" })
            </dd>
        </dl>
        <hr />
    }
</div>